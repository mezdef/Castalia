- if !user_signed_in?
  = form_for("user", :url => user_session_path, :html => {:class => "form-signin"}) do |f|
    -# = render(:partial => 'devise/sessions/login', :locals => { :f => f })
    %h2 TLC Users
    = f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email address"
    = f.password_field :password, :class => "form-control",  :placeholder => "Password"
    %label.checkbox
      = f.check_box :remember_me
      = f.label :remember_me
    .form-group
      = f.submit "Sign in", :class => "btn btn-block btn-lg btn-primary"
      -# = link_to "Sign up", new_user_path
      %p.text-center
        = link_to "Forgot your password?", users_resetpassword_path

- else
