= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-signin" }) do |f|
  %h2 Forgot your password?
  = devise_error_messages!
  -# = f.label :email, :class => "form-control",  :placeholder => "Your email"
  .form-group
    = f.email_field :email, :class => "form-control", :placeholder => "Your email", :autofocus => true

  = f.submit "Reset my password", :class => "btn btn-block btn-lg btn-primary"
