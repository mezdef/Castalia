%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  -# %div
  -#   = f.label :email
  -#   %br/
  -#   = f.email_field :email, :autofocus => true
  -# - if devise_mapping.confirmable? && resource.pending_reconfirmation?
  -#   %div
  -#     Currently waiting confirmation for: #{resource.unconfirmed_email}

  .form-group
    = f.label :first_name, "First name", :class => "control-label col-sm-2"
    .col-sm-10.text
      = f.text_field :first_name, :autofocus => true, :class => "form-control"

  .form-group
    = f.label :last_name, "Last name", :class => "control-label col-sm-2"
    .col-sm-10.text
      = f.text_field :last_name, :class => "form-control"

  .form-group
    = f.label :contact, "Contact number", :class => "control-label col-sm-2"
    .col-sm-10.text
      = f.text_field :contact, :class => "form-control"

  .form-group
    = f.label :location, "Location", :class => "control-label col-sm-2"
    .col-sm-10.text
      = f.text_field :location, :class => "form-control"

  -# .form-group
  -#   = f.label :password, "New Password", :class => "control-label col-sm-2"
  -#   .col-sm-10.text
  -#     = f.password_field :password, :class => "form-control"
  -#     %i (leave blank if you don't want to change it)

  -# .form-group
  -#   = f.label :password_confirmation, :class => "control-label col-sm-2"
  -#   .col-sm-10.text
  -#     = f.password_field :password_confirmation, :class => "form-control"

  .form-group
    = f.label :current_password, :class => "control-label col-sm-2"
    .col-sm-10.text
      = f.password_field :current_password, :class => "form-control"
      %i (we need your current password to confirm your changes)

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Update", :class => "btn btn-primary"

